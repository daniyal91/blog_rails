<% if notice %>
  <div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div class="col-md-10">
     <h1><%= post.title %></h1>   
     <em>Created by: <%= current_user.full_name %>, <%= time_ago_in_words(post.created_at) %> ago</em>
     <article><p> <%= post.content %> </p></article>
     <%= link_to 'Read', post_path(post), :class => "btn btn-info" %>
     <% if current_user.id == post.user_id %>
       <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-default" %>
       <%= link_to 'Delete', post, :class => "btn btn-danger", :method => :delete, :data => {:confirm => "Are you sure you want to delete this post?"} %>
     <% end %>
     <hr>
  </div>
<% end %>