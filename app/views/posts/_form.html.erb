<div class="row">
  <div class="col-sm-7 col-sm-offset-2">
    <div class="well bs-component">
      <%= form_for(@post, :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <% if @post.new_record? %>
            <legend>New Post</legend>
          <% else %>
            <legend>Edit Post</legend>
          <% end %>
          <div class="form-group">
            <%= f.label :title, :class => 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.text_field :title, autofocus: true, :class => 'form-control', :placeholder => 'Title' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :content, :class => 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.text_area :content, :class => 'form-control', :placeholder => 'Content' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Image", :class => 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.file_field :post_image, :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit :class => 'btn btn-primary' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>