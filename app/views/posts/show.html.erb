<% if notice %>
	<div class="alert alert-dismissible alert-success">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	 	<%= notice %>
	</div>
<% end %>

<h1>
	<blockquote>
  	<h3><%= @post.title %></h3>
  	<small>
  		<span class="glyphicon glyphicon-user" aria-hidden="true">&nbsp;<%= current_user.full_name %></span>
		</small>
		<small>
  		<span class="glyphicon glyphicon-time" aria-hidden="true">&nbsp;<%= time_ago_in_words(@post.created_at) %> ago</span>
		</small>
	</blockquote>
</h1>

<p class="lead"><%= @post.content %></p>

<%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
<%= link_to 'Delete', post_path, :class => "btn btn-danger", :method => :delete, :data => {:confirm => "Are you sure you want to delete this post?"} %>




<%= render 'comments/form'%>